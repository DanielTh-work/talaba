<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Delivery Option Selector -->
    <TextView
        android:id="@+id/tvDeliveryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Delivery Option"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"
        android:contentDescription="Title: Choose delivery option" />

    <RadioGroup
        android:id="@+id/radioGroupDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbPickup"
            android:text="Pickup from shop"
            android:checked="true"
            android:textColor="#000000"
            android:contentDescription="Pickup from shop option" />

        <RadioButton
            android:id="@+id/rbDelivery"
            android:text="Delivery to your address"
            android:textColor="#000000"
            android:contentDescription="Delivery to your address option" />
    </RadioGroup>

    <!-- Address input for delivery -->
    <EditText
        android:id="@+id/etAddress"
        android:hint="Enter delivery address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:background="@drawable/rounded_edittext"
        android:visibility="gone"
        android:contentDescription="Input delivery address" />

    <!-- Delivery Fee display -->
    <TextView
        android:id="@+id/tvDeliveryFee"
        android:text="Delivery Fee: 0 EGP"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:contentDescription="Shows delivery fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:padding="14dp"
        android:backgroundTint="#4F7C82"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Confirm delivery option"/>
</LinearLayout>
