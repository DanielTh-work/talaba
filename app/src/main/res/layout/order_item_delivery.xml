<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/tvOrderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #12345"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#004F5C"/>
        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop: Unknown"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvOrderDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup: Restaurant A\nDropoff: Customer Address"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward: 10 points"
            android:textSize="14sp"
            android:textColor="#007C91"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnTakeOrder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Take Order"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#007C91"
            android:layout_marginTop="12dp"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
